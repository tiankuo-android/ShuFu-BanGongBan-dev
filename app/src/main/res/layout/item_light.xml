<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_layout_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/light_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="会议室1"
                android:textColor="@color/c2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/light_room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="灯光照明控制"
                android:textColor="@color/a6"
                android:textSize="10sp" />
        </LinearLayout>

        <com.wfkj.android.smartoffice.util.view_util.CustomListView
            android:id="@+id/light_room_lights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wfkj.android.smartoffice.util.view_util.CustomListView>


        <com.wfkj.android.smartoffice.util.view_util.CustomListView
            android:id="@+id/light_room_colorlights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wfkj.android.smartoffice.util.view_util.CustomListView>


        <com.wfkj.android.smartoffice.util.view_util.CustomListView
            android:id="@+id/light_room_curtains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wfkj.android.smartoffice.util.view_util.CustomListView>
        <com.wfkj.android.smartoffice.util.view_util.CustomListView
            android:id="@+id/light_room_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wfkj.android.smartoffice.util.view_util.CustomListView>

    </LinearLayout>

</LinearLayout>